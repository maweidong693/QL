<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_order_number"
        style="@style/mineOrderButtonStyle"
        android:ellipsize="middle"
        android:singleLine="true"
        android:paddingStart="@dimen/dp_5"
        android:text="订单号"
        android:textColor="#7182D9" />

    <TextView
        android:id="@+id/tv_order_push_coin"
        style="@style/mineOrderButtonStyle"
        android:text="发币"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_order_come_coin"
        style="@style/mineOrderButtonStyle"
        android:text="回币"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_order_money"
        style="@style/mineOrderButtonStyle"
        android:text="金额"
        android:textColor="@color/black" />

    <RelativeLayout style="@style/mineOrderButtonStyle">

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/bg_order_status"
            android:gravity="center"
            android:text="状态"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_12" />

    </RelativeLayout>


</LinearLayout>