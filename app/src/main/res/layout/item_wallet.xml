<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:layout_marginStart="@dimen/dp_18"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_18"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_wallet_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_order_status"/>

        <TextView
            android:id="@+id/tv_wallet_coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_17"
            android:text="币种名称"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_16"
            android:src="@mipmap/ic_wallet_more" />

        <TextView
            android:id="@+id/tv_wallet_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_wallet_coin_name"
            android:layout_toEndOf="@id/tv_wallet_coin_name"
            android:text="aaaaaa"
            android:visibility="gone"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_wallet_coin_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="111111111111111111"
            android:textColor="#FEFEFE"
            android:textSize="@dimen/dp_11" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>