<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cb_handler"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iv_handler_avator"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@id/cb_handler"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_8"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/tv_handler_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@id/iv_handler_avator"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_15" />

    <include
        layout="@layout/view_line"
        android:layout_below="@id/iv_handler_avator"
        android:layout_height="1dp"
        android:layout_width="match_parent" />
</RelativeLayout>