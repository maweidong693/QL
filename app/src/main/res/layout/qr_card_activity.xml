<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/status_bar_color"
    android:orientation="vertical">

    <com.tencent.qcloud.tim.uikit.component.TitleBarLayout
        android:id="@+id/self_info_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:background="@drawable/bg_menu_shape"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
           >

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/self_icon"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:textIsSelectable="true"
                    android:id="@+id/self_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    tools:text="手机号：sadfa45"
                    />
                <TextView
                    android:layout_marginTop="25dp"
                    android:textColor="@color/color_aeaeae"
                    android:textIsSelectable="true"
                    android:id="@+id/self_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    tools:text="洽聊号：sadfa45"
                    android:text="" />


            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/code_img"
            android:layout_marginTop="15dp"
            android:layout_width="280dp"
            android:layout_height="280dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_aeaeae"
            />

    </LinearLayout>




</RelativeLayout>
