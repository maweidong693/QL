<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="310dp">

    <ImageView
        android:id="@+id/circle_bg"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:background="@color/status_bar_color"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/circle_head"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_head"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="25dp"
        />

    <TextView
        android:id="@+id/circle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="105dp"
        android:layout_marginBottom="85dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="自己"/>

    <LinearLayout
        tools:visibility="visible"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        android:id="@+id/new_remind"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/friends_demo_social_sns_bg"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/remind_img"
            android:layout_marginLeft="3dp"
            android:scaleType="fitXY"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/default_head"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:id="@+id/remind_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ffffff"/>

    </LinearLayout>

</RelativeLayout>