<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dp_10">

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/tv_data"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="11月5"
        android:textColor="@color/color_black_333333"
        android:textSize="28sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_toRightOf="@+id/tv_data"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="15dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/img_container"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:orientation="horizontal"
            >
            <ImageView
                tools:visibility="visible"
                android:visibility="gone"
                android:id="@+id/img_2_1"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_avatar"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:visibility="gone"
                android:layout_marginLeft="1dp"
                android:id="@+id/img_2_2"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_avatar"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/img_4"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_4_1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_avatar"
                    android:layout_height="0dp"/>
                <ImageView
                    android:id="@+id/img_4_2"
                    android:layout_marginTop="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_avatar"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/img_3"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_3_1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_avatar"
                        android:layout_height="0dp"/>
                    <ImageView
                        android:id="@+id/img_3_2"
                        android:layout_marginTop="1dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_avatar"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"/>

                </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:ellipsize="end"
            android:layout_alignTop="@+id/img_container"
            android:layout_marginLeft="5dp"
            tools:text="东方闪到水电费费个梵蒂冈"
            android:maxLines="3"
            android:layout_toRightOf="@+id/img_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/color_black_333333"
            />
        <TextView
            android:id="@+id/tv_num"
            android:layout_alignBottom="@+id/img_container"
            android:layout_marginLeft="5dp"
            tools:text="共9张"
            android:layout_toRightOf="@+id/img_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/color_aeaeae"
            />



    </RelativeLayout>

</RelativeLayout>