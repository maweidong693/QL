<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.tencent.qcloud.tim.uikit.component.TitleBarLayout
        android:id="@+id/user_data_friend_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:text="朋友圈动态" />

    <com.tencent.qcloud.tim.uikit.component.LineControllerView
        android:id="@+id/profile_see_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:isSwitch="true"
        app:name="@string/profile_see_to" />

    <com.tencent.qcloud.tim.uikit.component.LineControllerView
        android:id="@+id/profile_to_see"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:isSwitch="true"
        app:name="@string/profile_to_see" />
</LinearLayout>