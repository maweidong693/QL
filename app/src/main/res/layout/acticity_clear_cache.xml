<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/status_bar_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.tencent.qcloud.tim.uikit.component.TitleBarLayout
        android:id="@+id/clear_cache_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:background="@color/white"
        android:paddingTop="12dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/aaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缓存"
            android:textSize="16sp"
            android:textColor="@color/black_font_color"
            />
        <TextView
            android:id="@+id/cache_size"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            tools:text="121 KB"
            android:layout_below="@+id/aaa"
            android:textSize="20sp"
            android:textColor="@color/black_font_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/btn_send"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/wzt_btn_bg"
            android:enabled="false"
            android:text="清理"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_below="@+id/cache_size"
            android:lineSpacingExtra="2dp"
            android:textSize="15sp"
            android:textColor="@color/color_black_333333"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缓存是使用洽聊过程中产生的临时数据，清理缓存不会影响洽聊的正常使用"
            />
    </RelativeLayout>

</LinearLayout>
