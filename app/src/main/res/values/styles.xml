<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="jmui_chat_item_send_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="jmui_chat_text_date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">#555756</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="jmui_chat_item_sender_avatar_style">
        <item name="android:layout_width">@dimen/item_head_icon_size</item>
        <item name="android:layout_height">@dimen/item_head_icon_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:src">@drawable/icon</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="jmui_msg_text_style">
        <item name="android:maxWidth">225dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8.67dp</item>
        <item name="android:textColor">@color/chat_text_color</item>
    </style>

    <style name="jmui_chat_item_receive_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="jmui_chat_item_receiver_avatar_style">
        <item name="android:layout_width">@dimen/item_head_icon_size</item>
        <item name="android:layout_height">@dimen/item_head_icon_size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:src">@drawable/icon</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="jmui_chat_display_name_style">
        <item name="android:ems">5</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#B3B3B3</item>
        <item name="android:textSize">12sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="social_pop_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/friends_pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/friends_pop_exit_anim</item>
    </style>

    <style name="mineOrderButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">@dimen/dp_12</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
    </style>

    <style name="orderDetailHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="orderDetailText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <!--仿微信字体大小调整 FontSizeView-->
    <declare-styleable name="FontSizeView">
        <attr name="lineWidth" format="dimension|reference" />
        <attr name="lineColor" format="color|reference" />
        <attr name="totalCount" format="integer" />
        <attr name="circleColor" format="color|reference" />
        <attr name="circleRadius" format="dimension|reference" />

        <attr name="textFontColor" format="color|reference" />
        <attr name="smallSize" format="integer" />
        <attr name="standerSize" format="integer" />
        <attr name="bigSize" format="integer" />
        <attr name="defaultPosition" format="integer" />
    </declare-styleable>
</resources>